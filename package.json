        "test": "npm run build && npm run instrument && nyc --reporter=none ava --config ava.config.js && nyc report --reporter=html --reporter=text && npm run typetest",
        "static": "eslint index.js lib src test",
        "build": "gulp",
        "instrument": "nyc instrument ./src ./instrumented && node test/helpers/retarget-browser-coverage.js",
        "release": "npm run build && npm test && standard-version --commit-all",
        "typetest": "cd typetest/fake-bundle && npm i && npm run build"
    },
